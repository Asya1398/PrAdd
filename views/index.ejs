<!DOCTYPE html>
<html lang="en">
<head>
    <meta CHARSET="UTF-8">
    <title>Animals</title>

    <style>
        body {
            background-color:Wheat ;
        }

        .main_header{
            background-color: Peru ;
            height: 100px;

        }
        a{
            position: absolute;
            top: 40px;
            margin-left: 50%;
            text-transform: uppercase;
            font-size:25px;
            color: Wheat ;
            text-decoration: none;
        }

        a:hover{
            font-size:30px;
        }
.product{
    float: left;
    margin: 40px;
    border: 1px solid Peru;
    background-color: Peru;
    }
.product_item{
    text-align: center;
    font-size: 25px;
    color: Wheat;
}
    </style>
</head>
<body>
<header class="main_header">

<a href="/create">Add</a>

</header>
<ul>
    <% data.forEach(function(i){ %>
    <div   class="product">
      <div class="product_item">
          <img  width="200" height="200" src="../public/images/<%=i.a_img %>" alt=""> <br>
         Name: <%= i.name %> <br>
         Type: <%= i.type %> <br>
      </div>
    </div>
    <% }); %>
</ul>
</body>
</html>